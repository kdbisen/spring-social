######################################################################
# Project Properties
#####################################################################
project.name=Spring Social Platform API
project.name.short=spring-social

######################################################################
# Build Properties 
#####################################################################
version=TRUNK
debug=true

build=build


######################################################################
# Source Tree Properties
#####################################################################
src=src
src.lib=lib
src.java=${src}/java
src.etc=etc
src.doc=${src}/doc
src.webapp=${src}/webapp


######################################################################
# Distribution Properties
#####################################################################
prefix=dist
dist.base=${prefix}
dist.project=${dist.base}/${project.name.short}
dist.lib=${dist.project}/lib
dist.etc=${dist.project}/etc
dist.webapp=${dist.project}/webapp

dist.jar=${project.name.short}.jar

dist.doc=${dist.project}/doc
doc.dir=${dist.project}/doc/api

